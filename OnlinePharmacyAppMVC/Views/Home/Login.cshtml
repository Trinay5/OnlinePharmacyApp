@using OnlinePharmacyAppMVC.DTO
@model LoginViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />



<div class="container-fluid vh-100">
    <div class="row h-100">
        
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center"
             style="background: linear-gradient(135deg, #1d3557, #457b9d); min-height: 100vh; color: #fff;">

            <h1 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown"
                style="text-shadow: 0 0 10px rgba(255, 193, 7, 0.8);">
                Welcome to <span class="text-warning">Contoso Health</span>
            </h1>

            <p class="lead animate__animated animate__fadeInUp animate__delay-1s">
                Empowering your wellness journey with care, convenience, and confidence.
                Access prescriptions, manage orders, and explore personalized services—all in one place.
            </p>

            <img src="~/images/contoso_health.png"
                 alt="Contoso Health"
                 class="img-fluid mt-4 rounded shadow animate__animated animate__zoomIn animate__delay-2s"
                 style="max-width: 80%; transition: transform 0.6s ease-in-out;"
                 onmouseover="this.style.transform='scale(1.05)'"
                 onmouseout="this.style.transform='scale(1)'" />
        </div>



       
        <div class="col-md-6 d-flex align-items-center justify-content-center bg-white">
            <div class="card shadow w-75">
                <div class="card-body">
                    <h3 class="text-center mb-4">Login</h3>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CaptchaCode" class="form-label">CAPTCHA Code</label>
                            <div class="mb-2 p-2 bg-secondary text-white text-center rounded fw-bold">
                                @Context.Session.GetString("CaptchaCode")
                            </div>
                            <input asp-for="CaptchaCode" class="form-control" />
                            <span asp-validation-for="CaptchaCode" class="text-danger"></span>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center">@ViewBag.Error</div>
                        }

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-controller="Register" asp-action="Index" class="btn btn-outline-secondary w-100">New User? Register Here</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
