@{
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; // or _Layout.cshtml for admin
}

@if (TempData["Success"] != null)
{
    <div class="success-msg">@TempData["Success"]</div>
}

@{
    ViewData["Title"] = "Profile";
    var userName = Context.Session.GetString("userName") ?? "Guest";
    var email = Context.Session.GetString("email");
    var userId = Context.Session.GetString("userId");
    var phoneNumber = Context.Session.GetString("phoneNumber");
    var address = Context.Session.GetString("address");
}

<h2 class="mb-4 text-center">User Profile</h2>

<div class="card shadow p-4 bg-light">
    <p><strong>Name:</strong> @userName</p>
    <p><strong>Email:</strong> @email</p>
    <p><strong>User ID:</strong> @userId</p>
    <p><strong>Mobile Number:</strong> @phoneNumber</p>
    <p><strong>Address:</strong> @address</p>
</div>

<div class="mt-4 text-end">
    <a class="btn btn-outline-primary" href="/Home/EditProfile">Edit Profile</a>
</div>
