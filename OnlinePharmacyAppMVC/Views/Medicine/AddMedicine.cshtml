@model OnlinePharmacyAppMVC.DTO.MedicineDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Medicine";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Add New Medicine</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="AddMedicine" method="post" class="shadow p-4 rounded bg-light">
        <div class="mb-3">
            <label asp-for="medName" class="form-label">Name</label>
            <input asp-for="medName" class="form-control" />
            <span asp-validation-for="medName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="composition" class="form-label">Composition</label>
            <input asp-for="composition" class="form-control" />
            <span asp-validation-for="composition" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="description" class="form-label">Description</label>
            <textarea asp-for="description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="manufacturing" class="form-label">Manufacturing</label>
            <input asp-for="manufacturing" class="form-control" />
            <span asp-validation-for="manufacturing" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="expDate" class="form-label">Expiry Date</label>
            <input asp-for="expDate" type="date" class="form-control" />
            <span asp-validation-for="expDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="price" class="form-label">Price (₹)</label>
            <input asp-for="price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="stockQty" class="form-label">Stock Quantity</label>
            <input asp-for="stockQty" type="number" class="form-control" />
            <span asp-validation-for="stockQty" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success me-2">Add Medicine</button>
            <a asp-action="ViewMedicine" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
