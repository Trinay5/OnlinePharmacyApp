@model OnlinePharmacyAppMVC.DTO.GetMedicine
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "All Medicines";
}

<h2>All Medicines</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<form method="get" asp-action="ViewMedicine" class="mb-4 d-flex justify-content-end">
    <input type="text" name="search" class="form-control w-25 me-2" placeholder="Search by medicine name..." />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Medicine ID</th>
            <th>Name</th>
            <th>Composition</th>
            <th>Description</th>
            <th>Manufacturing</th>
            <th>Expiry Date</th>
            <th>Price (₹)</th>
            <th>Stock Qty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medicine in Model.data)
        {
            <tr>
                <td>@medicine.medicineId</td>
                <td>@medicine.medName</td>
                <td>@medicine.composition</td>
                <td>@medicine.description</td>
                <td>@medicine.manufacturing</td>
                <td>@medicine.expDate.ToString("dd/MM/yyyy")</td>
                <td>@medicine.price.ToString("F2")</td>
                <td>@medicine.stockQty</td>
                <td>
                    <a asp-action="EditMedicine" asp-route-id="@medicine.medicineId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="DeleteMedicine" asp-route-id="@medicine.medicineId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
