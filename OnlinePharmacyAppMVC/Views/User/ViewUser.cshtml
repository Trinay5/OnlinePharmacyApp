@model OnlinePharmacyAppMVC.DTO.GetUsers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Registered Users</h2>

@if (Model?.data == null || !Model.data.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th> 
                <th>Phone</th>
                <th>Address</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.data)
        {
            <tr>
                <td>@user.userId</td>
                <td>@user.userName</td>
                <td>@user.email</td>
                <td>@user.password</td> 
                <td>@user.phoneNumber</td>
                <td>@user.address</td>
                <td>@(user.isAdmin ? "Admin" : "Customer")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="EditUser" asp-route-id="@user.userId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-id="@user.userId"
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
