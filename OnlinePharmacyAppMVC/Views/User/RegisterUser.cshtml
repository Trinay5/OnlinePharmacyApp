@model OnlinePharmacyAppMVC.DTO.UserDTO

@{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
   
    ViewData["Title"] = "User Registration";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="RegisterUser" method="post" class="shadow p-4 bg-light rounded">
        <div class="mb-3">
            <label asp-for="userName" class="form-label">Username</label>
            <input asp-for="userName" class="form-control" required />
            <span asp-validation-for="userName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="email" class="form-label">Email</label>
            <input asp-for="email" type="email" class="form-control" required />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="password" class="form-label">Password</label>
            <input asp-for="password" type="password" class="form-control" required />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="phoneNumber" class="form-label">Phone Number</label>
            <input asp-for="phoneNumber" class="form-control" required />
            <span asp-validation-for="phoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="address" class="form-label">Address</label>
            <textarea asp-for="address" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="address" class="text-danger"></span>
        </div>

        <!-- No isAdmin checkbox here -->

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>
